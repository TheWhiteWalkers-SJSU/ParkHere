<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewParkHere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ParkHere"
        android:textSize="40sp"
        android:textColor="@color/colorBlack"

        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/buttonCreateAccount"
        style="@style/ButtonThemeOrange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create an account"

        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        />

    <Button
        android:id="@+id/buttonLogin"
        style="@style/ButtonTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"

        android:layout_margin="15dp"
        android:layout_above="@id/buttonCreateAccount"

        />

    <TextView
        android:id="@+id/textViewForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot your password?"

        android:layout_marginRight="15dp"
        android:layout_marginBottom="40dp"
        android:layout_above="@id/buttonLogin"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

    <EditText
        android:id="@+id/editTextLoginPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"

        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_above="@id/textViewForgotPassword"
        />

    <EditText
        android:id="@+id/editTextLoginEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"

        android:layout_margin="15dp"
        android:layout_above="@id/editTextLoginPassword"
        />
</RelativeLayout>