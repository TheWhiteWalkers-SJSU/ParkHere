<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewMessageUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        />

    <TextView
        android:id="@+id/textViewMessageDateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MM/DD/YYY @ 10:00 AM"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/textViewMessageUser"
        />

    <TextView
        android:id="@+id/textViewMessageBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Body"
        android:textSize="18sp"
        android:textColor="@color/colorBlack"
        android:layout_below="@+id/textViewMessageUser"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp"
/>
</RelativeLayout>